{
  "name": "termirc",
  "version": "1.0.0",
  "description": "A minimalistic IRC-inspired chat application that runs entirely in the terminal. Based on Typescript and Node.js.",
  "main": "index.js",
  "scripts": {
    "dev:server": "ts-node-dev --respawn -r tsconfig-paths/register --project server/tsconfig.json server/src/server.ts",
    "dev:client": "ts-node-dev --respawn -r tsconfig-paths/register --project client/tsconfig.json client/src/client.ts",
    "dev": "concurrently -k \"npm run dev:server\" \"npm run dev:client\"",
    "build": "tsc -b",
    "start:client": "node dist/client/client.js",
    "start:server": "node dist/server/server.js",
    "start": "npm-run-all -p start:server start:client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Razvie-arr/termirc.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Razvie-arr/termirc/issues"
  },
  "homepage": "https://github.com/Razvie-arr/termirc#readme",
  "dependencies": {
    "@libsql/client": "^0.15.6",
    "blessed": "^0.1.81",
    "drizzle-orm": "^0.43.1",
    "prettier": "^3.5.3"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.15.19",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
